<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_screeen" android:overScrollMode="ifContentScrolls">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_matriz_root" android:layout_marginLeft="@dimen/mg_linear_layout"
            android:layout_marginTop="@dimen/mg_linear_layout" android:layout_marginStart="@dimen/mg_linear_layout"
            android:layout_marginRight="@dimen/mg_linear_layout" android:layout_marginEnd="@dimen/mg_linear_layout"
            android:layout_marginBottom="@dimen/mg_linear_layout">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent" style="@style/card"
                android:layout_margin="@dimen/mg_card">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout">
                    <TextView
                            android:text="Matriz"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView2"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/txtMatriz"
                            android:layout_weight="1" android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Raça"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView9"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/txtRaca"
                            android:layout_weight="1" android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Estado Reprodutivo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView7"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/txtEstado"
                            android:layout_weight="1" android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Ciclo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView5"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/cicloMatriz"
                            android:layout_weight="1" android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Resumo Matriz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView3"
                            android:layout_gravity="center" android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Media Nascidos Vivos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView16"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/txtMediaVivos"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Percentual Mumificados"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView20"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/txtPercentualMum"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Media Nascidos Totais"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView14"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/txtMediaNascidosTotais"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Percentual Natimortos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView18"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/txtPercentualNm"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Percentual Morte Ao Nascer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView22"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/txtPercentualMn"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Total Nascidos Vivos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView23"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:id="@+id/txtTotalNascidosVivos"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Total Natimortos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/txtFuncionarioCobertura"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:id="@+id/txtTotalNatimortos"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Total Mumificados"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView26"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:id="@+id/txtTotalMumificados"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Total Morte Ao Nascer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView27"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:id="@+id/txtTotalMorteAoNascer"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Total Nascidos Totais"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView28"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:id="@+id/txtTotalNascidosTotais"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Percentual Baixa Viabilidade"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView29"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:id="@+id/txtPercentualBaixaViabilidade"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Nota"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView30"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:id="@+id/txtNota"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Prob. Vivos abaixo 12,00"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView31"
                            android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:id="@+id/txtProbabilidadeAbaixo"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_margin="@dimen/mg_linear_layout"
                        android:visibility="visible">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <Button
                                android:text="Partos"
                                android:layout_width="match_parent"
                                android:layout_height="0dp" android:id="@+id/btnPartos" android:layout_weight="1"
                                style="@style/button"/>
                        <Button
                                android:text="Coberturas"
                                android:layout_width="match_parent"
                                android:layout_height="0dp" android:id="@+id/btnCoberturas"
                                android:layout_weight="1" style="@style/button"/>
                        <Button
                                android:text="Desmames"
                                android:layout_width="match_parent"
                                android:layout_height="0dp" android:id="@+id/btnDesmames"
                                android:layout_weight="1" style="@style/button"/>
                        <Button
                                android:text="Gráficos"
                                android:layout_width="match_parent"
                                android:layout_height="0dp" android:id="@+id/btnGraficos" android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>