<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.github.mikephil.charting.charts.BarChart android:layout_width="match_parent"
                                                      android:layout_height="match_parent"
                                                      android:id="@+id/graficoNascidosNatimortos"
                                                      android:layout_weight="1"/>
        <com.github.mikephil.charting.charts.BarChart android:layout_width="match_parent"
                                                      android:layout_height="match_parent"
                                                      android:id="@+id/graficoNascidosTotais"
                                                      android:layout_weight="1"/>
        <com.github.mikephil.charting.charts.BarChart android:layout_width="match_parent"
                                                      android:layout_height="match_parent"
                                                      android:id="@+id/graficoNascidosVivos" android:layout_weight="1">
        </com.github.mikephil.charting.charts.BarChart>
    </LinearLayout>
</RelativeLayout>