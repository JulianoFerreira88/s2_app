                            android:layout_height="wrap_content" android:id="@+id/txtDataDesmame"
                            android:layout_weight="1" android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
