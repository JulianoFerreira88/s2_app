<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" android:background="@color/bg_screeen">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/linear" android:background="@color/bg_screeen">
        <androidx.cardview.widget.CardView
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mg_card" android:id="@+id/firstCard">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Matrizes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/txtNumMatrizes"
                            android:layout_weight="1" android:gravity="right" android:layout_gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Saldo Leitões"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/txtSaldoLeitoes"
                            android:layout_weight="1"
                            android:layout_gravity="right" android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Media Por Matriz"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="1"
                            android:layout_gravity="right" android:gravity="right" android:id="@+id/txtMediaPorPorca"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Percentual Abiaxo da Media"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="1"
                            android:layout_gravity="right" android:gravity="right" android:id="@+id/txtPercentAbaixo"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="@dimen/mg_linear_layout"
                >
                    <TextView
                            android:text="Media primíparas"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="1"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="1"
                            android:layout_gravity="right" android:gravity="right"
                            android:id="@+id/txtMediaPrimiparas"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_margin="@dimen/mg_card"
                android:id="@+id/secondCard" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Matrizes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtMatrizes"
                        android:layout_margin="@dimen/mg_linear_layout"/>
                <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/mg_linear_layout" android:id="@+id/spMatrizes"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                style="@style/card"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_margin="@dimen/mg_card"
                android:id="@+id/thirdCard" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Marrãs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/mg_linear_layout" android:id="@+id/txtMarras"/>
                <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/spMarras"
                        android:layout_margin="@dimen/mg_linear_layout"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>
